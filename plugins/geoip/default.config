# [!!! -------------------------------------------------------------------- !!!]
# [!!! ---------------------- DO NOT EDIT THIS FILE ----------------------- !!!]
# [!!! -------------------------------------------------------------------- !!!]
#
# This is the default configuration for geoip
#
# Apply the configuration as follows:
#     - t2conf geoip --reset
#
# If you want to customize the default configuration, proceed as follows:
#     1. Create 'geoip.config':
#           t2conf geoip -g
#     2. Edit 'geoip.config'
#     3. Apply 'geoip.config':
#           t2conf geoip -C geoip.config
#
# [Format of the file]
#     - Empty lines and lines starting with '%' or '#'â€™ are ignored.
#     - One section starting with '# :name: pluginName" per file.
#     - If no section starting with '# :file: path/to/file.h" is specified,
#       it is assumed the file is src/pluginName.h (relative to plugin folder)
#         - If a configuration element applies to a different file, a file
#           section MUST be used
#         - Filenames are relative to plugin folder, i.e., geoip,
#           e.g., src/geoip.h
#     - A line is composed of the name of a macro (define) in the header file
#       followed by an equal sign and the value to set for the define:
#           NAME = value
#       where value can be anything, including yes (= 1) and no (= 0)
#     - Add a comment before each setting to describe the configuration option
#       and its valid values:
#           # Description of the option [yes / no]
#       or
#           # Description of the option [0 - 255]
#       or
#           # Description of the option:
#           #   0: description of value 0
#           #   1: description of value 1
#           #   2: description of value 2

# ---------------------------------------------------------------------------- #
# :name: geoip                                                                 #
# ---------------------------------------------------------------------------- #

# Library to use:
#   2: GeoLite2 / Internal libmaxmind (faster)
#   1: GeoLite2 / libmaxmind
#   0: GeoLite  / geoip (legacy)
GEOIP_LIB = 2

# Display geo info for the source IP [yes / no]
GEOIP_SRC = yes

# Display geo info for the destination IP [yes / no]
GEOIP_DST = yes

# Format of the continent:
#   0: no continent
#   1: name (GeoLite2)
#   2: two letters code
GEOIP_CONTINENT = 2

# Format of the country:
#   0: no country
#   1: name
#   2: two letters code
#   3: three letters code (Legacy)
GEOIP_COUNTRY = 2

# Display the city of the IP [yes / no]
GEOIP_CITY = yes

# Display the postal code of the IP [yes / no]
GEOIP_POSTCODE = yes

# Display the position (latitude, longitude) of the IP [yes / no]
GEOIP_POSITION = yes

# Display the metro (dma) code of the IP (US only) [yes / no]
GEOIP_METRO_CODE = no

# Representation of unknown locations (GeoIP's default)
GEOIP_UNKNOWN = "--"

# Display the accuracy (GeoLite2) [yes / no]
GEOIP_ACCURACY = yes

# Display the time zone (GeoLite2) [yes / no]
GEOIP_TIMEZONE = yes

# Display the organization (GeoLite2 Enterprise Version) [yes / no]
GEOIP_ORG = no

# Display the ISP name (GeoLite2 Enterprise Version) [yes / no]
GEOIP_ISP = no

# Display the autonomous systems number (GeoLite2 Enterprise Version) [yes / no]
GEOIP_ASN = no

# Display the autonomous systems name (GeoLite2 Enterprise Version) [yes / no]
GEOIP_ASNAME = no

# Display the connection type (GeoLite2 Enterprise Version) [yes / no]
GEOIP_CONNT = no

# Display the user type (GeoLite2 Enterprise Version) [yes / no]
GEOIP_USRT = no

# Name of the database to use for IPv4 and IPv6 (combined)
GEOIP_DB_FILE = "GeoLite2-City.mmdb"

# Output language (GeoLite2):
#   "en",
#   "de",
#   "fr",
#   "es",
#   "ja",
#   "pt-BR",
#   "ru",
#   "zh-CN",
#   ...
GEOIP_LANG = "en"

# Buffer size (GeoLite2) [0 - 255]
GEOIP_BUFSIZE = 64

# ---------------------------------------------------------------------------- #
# !!! The following options only apply if GEOIP_LIB == 0 !!!                   #
# ---------------------------------------------------------------------------- #

# Format of the region (GeoLite legacy):
#   0: no region
#   1: name
#   2: code
GEOIP_REGION = 1

# Display the telephone area code of the IP (GeoLite legacy) [yes / no]
GEOIP_AREA_CODE = no

# Format of netmasks (GeoLite legacy):
#   0: no netmask
#   1: netmask as int (cidr)
#   2: netmask as hex (IPv4 only)
#   3: netmask as IP (IPv4 only)
GEOIP_NETMASK = 1

# How to handle the DB (GeoLite legacy):
#   0: read DB from file system (slower, least memory)
#   1: index cache (cache frequently used index only)
#   2: memory cache (faster, more memory)
GEOIP_DB_CACHE = 2

# Name of the database to use for IPv4
GEOIP_DB_FILE4 = "GeoLiteCity.dat"

# Name of the database to use for IPv6
GEOIP_DB_FILE6 = "GeoLiteCityv6.dat"
