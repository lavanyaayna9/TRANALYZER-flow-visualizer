# Format for MAC addresses:
#   0: hex
#   1: mac
#   2: int
MR_MAC_FMT = 1

# Report number of distinct source/destination MAC pairs [yes / no]
MR_NPAIRS = yes

# Format for MAC addresses labels:
#   0: no labels
#   1: numerical (int)
#   2: short string class
#   3: string
MR_MACLBL = 2

# Maximum number of MAC address per flow [0 - 255]
MR_MAX_MAC = 16


# ---------------------------------------------------------------------------- #
# :file: src/macLbl.h                                                          #
# ---------------------------------------------------------------------------- #

# Name of MAC label file
MACLBLFILE = "macEthlbl_HLP.bin"

# Maximum length for 'who' information (short version) [0 - UINT16_MAX]
MAC_SORGLEN = 12

# Maximum length for 'who' information (long version) [0 - UINT16_MAX]
MAC_ORGLEN = 44
