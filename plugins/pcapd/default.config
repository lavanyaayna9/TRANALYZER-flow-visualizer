# [!!! -------------------------------------------------------------------- !!!]
# [!!! ---------------------- DO NOT EDIT THIS FILE ----------------------- !!!]
# [!!! -------------------------------------------------------------------- !!!]
#
# This is the default configuration for pcapd
#
# Apply the configuration as follows:
#     - t2conf pcapd --reset
#
# If you want to customize the default configuration, proceed as follows:
#     1. Create 'pcapd.config':
#           t2conf pcapd -g
#     2. Edit 'pcapd.config'
#     3. Apply 'pcapd.config':
#           t2conf pcapd -C pcapd.config
#
# [Format of the file]
#     - Empty lines and lines starting with '%' or '#'â€™ are ignored.
#     - One section starting with '# :name: pluginName" per file.
#     - If no section starting with '# :file: path/to/file.h" is specified,
#       it is assumed the file is src/pluginName.h (relative to plugin folder)
#         - If a configuration element applies to a different file, a file
#           section MUST be used
#         - Filenames are relative to plugin folder, i.e., pcapd,
#           e.g., src/pcapd.h
#     - A line is composed of the name of a macro (define) in the header file
#       followed by an equal sign and the value to set for the define:
#           NAME = value
#       where value can be anything, including yes (= 1) and no (= 0)
#     - Add a comment before each setting to describe the configuration option
#       and its valid values:
#           # Description of the option [yes / no]
#       or
#           # Description of the option [0 - 255]
#       or
#           # Description of the option:
#           #   0: description of value 0
#           #   1: description of value 1
#           #   2: description of value 2

# ---------------------------------------------------------------------------- #
# :name: pcapd                                                                 #
# ---------------------------------------------------------------------------- #

# Activate packet range selection [yes / no]
PD_MODE_PKT = no

# Packet at which processing starts [0 UINT64_MAX]
# (require PD_MODE_PKT = yes)
PD_STRTPKT = 1

# Packet at which processing ends (use 0 for end of flow) [0 UINT64_MAX]
# (require PD_MODE_PKT = yes)
PD_ENDPKT = 10

# Selective flow extraction:
#   0: extract flows listed in input file (if -e option was used) or
#      extract flows if alarm bit is set (if -e option was not used)
#   1: dump all packets
PD_MODE_IN = 0

# Search algorithm (-e option):
#   0: Linear search
#   1: Binary search
PD_LBSRCH = 1

# Rule of flow dumping
#   0: dump non-matching flows
#   1: dump matching flows
PD_EQ = 1

# Also extract the opposite flow [yes / no]
# (require PD_EQ = 1)
PD_OPP = no

# if (!PD_MODE_IN && -e set) then
#   2: extract A flow
#   3: extract B flow
PD_DIRSEL = 0

# pcap file rule
#   0: create one pcap for all flows,
#   1: create one pcap per flow
PD_MODE_OUT = 0

# Split output file (-W option) [yes / no]
PD_SPLIT = no

# Timeshift [yes / no]
PD_TSHFT = no

# Add value to secs [0 - 999999999999]
# (require PD_TSHFT = 1)
PD_TTSFTS = 0

# Add value to usec/nsec (depends on TSTAMP_PREC in tranalyzer.h) [0 - 999999999]
# (require PD_TSHFT = 1)
PD_TTSFTNMS = 1

# MAC shift last byte [yes / no]
PD_MACSHFT = no

# Add value to source MAC [0 - 255]
# (require PD_MACSHFT = 1)
PD_MACSSHFT = 1

# Add value to destination MAC [0 - 255]
# (require PD_MACSHFT = 1)
PD_MACDSHFT = 1

# VLAN ID shift [yes / no]
PD_VLNSHFT = no

# Add value to inner VLAN ID [0 - 4096]
# (require PD_VLNSHFT = 1)
PD_VLNISHFT = 1

# Add to source/destination IPv4/6 [yes / no]
PD_IPSHFT = no

# Add IPv4 32 bit network order [0 - UINT32_MAX]
# (require PD_IPSHFT = 1)
PD_IP4SHFT = 0x00000001

# 64 bit network order increment
# Add IPv6 shift last 64 bit network order [0 - UINT64_MAX]
# (require PD_IPSHFT = 1)
PD_IP6SHFT = 0x0000000000000001

# TTL handling:
#   0: no TTL change
#   1: TTL shift
#   2: random shift
PD_TTLSHFT = 0

# Value to subtract from TTL [0 - 255]
# (require PD_TTLSHFT = 1)
PD_TTL = 8

# TTL modulo [0 - 255]
# (require PD_TTLSHFT > 0)
PD_TTLMOD = 128

# Correct checksum in IPv4 header [yes / no]
PD_CHKSUML3 = no

# Maximum number of simultaneously open file descriptors [0 - 255]
PD_MAX_FD = 128

# Extension for generated pcap file
PD_SUFFIX = "_pcapd.pcap"
