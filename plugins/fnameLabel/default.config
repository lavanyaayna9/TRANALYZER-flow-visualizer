# ---------------------------------------------------------------------------- #
# :name: fnameLabel                                                            #
# ---------------------------------------------------------------------------- #

# Output label derived from input [yes / no]
# (Use fileNum for Tranalyzer -D option, otherwise refer to FNL_IDX below)
FNL_LBL = yes

# Use the 'FNL_IDX' letter of the filename as label [0 - 255]
# (Tranalyzer -R/-i/-r options)
# (require FNL_LBL = yes)
FNL_IDX = 0

# Output hash of filename [yes / no]
FNL_HASH = no

# Output filename [yes / no]
FNL_FLNM = yes

# Filenames to use for fnLabel, fnHash and fnName
#   0: absolute
#   1: relative
FNL_FREL = 1

# Max length for filename [0 - UINT16_MAX]
FNL_NAMELEN = 1024
