.PHONY: all install splunk

# Build all the tutorials
all:
	for i in *.tex; do \
		if [ "$$i" != "template.tex" ]; then \
			INFILE="$$(basename "$$i" .tex)" make -f ../Makefile.plugin; \
		fi \
	done

install:
	INFILE="$@" make -f ../Makefile.plugin

splunk:
	INFILE="$@" make -f ../Makefile.plugin

#template:
#	INFILE="$@" make -f ../Makefile.plugin

.PHONY: clean mrproper distclean

# Delete all files generated by LaTeX
clean:
	for i in *.tex; do \
		INFILE="$$(basename "$$i" .tex)" make -f ../Makefile.plugin clean; \
	done

# Delete all files generated by LaTeX and all the PDFs
mrproper:
	for i in *.tex; do \
		INFILE="$$(basename "$$i" .tex)" make -f ../Makefile.plugin mrproper; \
	done

distclean:
	for i in *.tex; do \
		INFILE="$$(basename "$$i" .tex)" make -f ../Makefile.plugin distclean; \
	done
