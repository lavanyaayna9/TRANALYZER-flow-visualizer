#!/usr/bin/env awk
#
# Return true if one of the source MAC address(es) is equal to 'mac'.
# If 'mac' is omitted, return the source MAC address(es).
#
# Parameters:
#   - [m] : the MAC address to filter
#
# Dependencies:
#   - macRecorder
#
# See also:
#   - dether
#   - dmac
#   - ether
#   - mac
#   - sether: alias for smac
#
# Examples:
#   - tawk 'smac("00:11:22:33:44:55")' file.txt
#   - tawk '{ print smac() }' file.txt

@include "hdr"
@include "splitc"
@include "_validate_col"

function smac(m,        _c, _i, _l, _macs, _reps, _str) {
    _c = _validate_col("srcMac_dstMac_numP;srcMac", _my_srcMac)
    _l = split($_c, _reps, ";");
    if (__PRIHDR__ && hdr()) return splitc($_l, 1)
    for (_i = 1; _i <= _l; _i++) {
        split(_reps[_i], _macs, "_");
        if (length(m) == 0) {
            if (_i == 1) _str = _macs[1]
            else if (_str ~ _macs[1]) _str = _str ";" _macs[1] # ignore reps
        } else if (_macs[1] ~ m) return 1
    }
    if (length(m) == 0) return _str
    return 0
}
