-- Top IP protocols by number of bytes

SELECT
    "l4Proto" AS proto,
    SUM("l7BytesSnt") AS cnt
FROM
    flow
WHERE
    ("flowStat"::BIGINT & x'c000'::BIGINT) != 0::BIGINT  -- IPv4/6 only
    AND "timeFirst" >= to_timestamp(:time_from)
    AND "timeLast" <= to_timestamp(:time_to)

GROUP BY proto
ORDER BY cnt :sort_order

LIMIT :n
