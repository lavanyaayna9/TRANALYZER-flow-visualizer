-- Top TCP destination port by number of bytes

SELECT
    port,
    SUM(bytes) AS cnt

FROM (
    -- A flows
    SELECT
        "dstPort" AS port,
        "l7BytesRcvd" AS bytes
    FROM
        flow
    WHERE
        "dir" = 'A'
        AND ("flowStat"::BIGINT & 1) = 0::BIGINT
        AND "l4Proto" = 6
        AND "timeFirst" >= to_timestamp(:time_from)
        AND "timeLast" <= to_timestamp(:time_to)

    UNION ALL

    -- B flows
    SELECT
        "srcPort" AS port,
        "l7BytesSnt" AS bytes
    FROM
        flow
    WHERE
        "dir" = 'A'
        AND ("flowStat"::BIGINT & 1) = 1::BIGINT
        AND "l4Proto" = 6
        AND "timeFirst" >= to_timestamp(:time_from)
        AND "timeLast" <= to_timestamp(:time_to)
) AS flows

GROUP BY port
ORDER BY cnt :sort_order

LIMIT :n
