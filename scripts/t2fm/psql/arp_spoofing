-- List of hosts being spoofed

SELECT
    SPLIT_PART(UNNEST("arpMac_Ip_Cnt"), '_', 1) as mac,
    SPLIT_PART(UNNEST("arpMac_Ip_Cnt"), '_', 2) as ip
FROM
    flow
WHERE
    ("arpStat" & x'80'::INT) != 0::INT
    AND "timeFirst" >= to_timestamp(:time_from)
    AND "timeLast" <= to_timestamp(:time_to)

LIMIT :n
