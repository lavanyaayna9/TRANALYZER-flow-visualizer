-- Top source organization by number of bytes

SELECT
    CASE org
        WHEN 'Private network' THEN '--'
        WHEN '--' THEN 'N/A'
        WHEN '-' THEN 'N/A'
        ELSE toValidUTF8(org)
    END as orga,
    SUM(bytes) AS cnt

FROM (
    -- A flows
    SELECT
        "srcIPOrg" AS org,
        "l7BytesSnt" AS bytes
    FROM
        flow
    WHERE
        "dir" = 'A'
        AND bitTest("flowStat", 0) = 0
        AND bitTestAny("flowStat", 14, 15) > 0  -- IPv4/6 only
        AND "timeFirst" >= {time_from:DateTime64(6)}
        AND "timeLast" <= {time_to:DateTime64(6)}

    UNION ALL

    -- B flows
    SELECT
        "dstIPOrg" AS org,
        "l7BytesRcvd" AS bytes
    FROM
        flow
    WHERE
        "dir" = 'A'
        AND bitTest("flowStat", 0) = 1
        AND bitTestAny("flowStat", 14, 15) > 0  -- IPv4/6 only
        AND "timeFirst" >= {time_from:DateTime64(6)}
        AND "timeLast" <= {time_to:DateTime64(6)}
) AS flows

GROUP BY orga
ORDER BY multiply(cnt, {sort_order:Int8})

LIMIT {n:UInt64}
