-- Top source countries by number of bytes

SELECT
    CASE WHEN match(cc, '^\d+') THEN '--'
         WHEN cc = '--'         THEN 'N/A'
         WHEN cc = '-'          THEN 'N/A'
         WHEN LOWER(cc) = 'ff'  THEN 'N/A'
         ELSE UPPER(toValidUTF8(cc))
    END AS cn,
    SUM(bytes) AS cnt

FROM (
    -- A flows
    SELECT
        "srcIPCC" AS cc,
        "l7BytesSnt" AS bytes
    FROM
        flow
    WHERE
        "dir" = 'A'
        AND bitTest("flowStat", 0) = 0
        AND bitTestAny("flowStat", 14, 15) > 0  -- IPv4/6 only
        AND "timeFirst" >= {time_from:DateTime64(6)}
        AND "timeLast" <= {time_to:DateTime64(6)}

    UNION ALL

    -- B flows
    SELECT
        "dstIPCC" AS cc,
        "l7BytesRcvd" AS bytes
    FROM
        flow
    WHERE
        "dir" = 'A'
        AND bitTest("flowStat", 0) = 1
        AND bitTestAny("flowStat", 14, 15) > 0  -- IPv4/6 only
        AND "timeFirst" >= {time_from:DateTime64(6)}
        AND "timeLast" <= {time_to:DateTime64(6)}
) AS flows

GROUP BY cn
ORDER BY multiply(cnt, {sort_order:Int8})

LIMIT {n:UInt64}
