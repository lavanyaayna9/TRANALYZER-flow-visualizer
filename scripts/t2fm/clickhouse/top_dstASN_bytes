-- Top destination ASN by number of bytes

SELECT
    asn,
    SUM(bytes) AS cnt

FROM (
    -- A flows
    SELECT
        "dstIPASN" AS asn,
        "l7BytesRcvd" AS bytes
    FROM
        flow
    WHERE
        "dir" = 'A'
        AND bitTest("flowStat", 0) = 0
        AND bitTestAny("flowStat", 14, 15) > 0  -- IPv4/6 only
        AND "timeFirst" >= {time_from:DateTime64(6)}
        AND "timeLast" <= {time_to:DateTime64(6)}

    UNION ALL

    -- B flows
    SELECT
        "srcIPASN" AS asn,
        "l7BytesSnt" AS bytes
    FROM
        flow
    WHERE
        "dir" = 'A'
        AND bitTest("flowStat", 0) = 1
        AND bitTestAny("flowStat", 14, 15) > 0  -- IPv4/6 only
        AND "timeFirst" >= {time_from:DateTime64(6)}
        AND "timeLast" <= {time_to:DateTime64(6)}
) AS flows

GROUP BY asn
ORDER BY multiply(cnt, {sort_order:Int8})

LIMIT {n:UInt64}
