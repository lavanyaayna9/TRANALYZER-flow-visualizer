-- Top DNS queries by number of flows

SELECT
    toValidUTF8(dns),
    COUNT(*) AS cnt

FROM (
    SELECT
        dns
    FROM
        flow
    ARRAY JOIN
        "dnsQname" AS dns
    WHERE
        notEmpty("dnsQname")
        AND bitTest("flowStat", 0) = 0                -- A flows only
        AND bitTest("dnsStat", 1) = 0                 -- Ignore NBNS
        AND "timeFirst" >= {time_from:DateTime64(6)}
        AND "timeLast" <= {time_to:DateTime64(6)}
) AS flows

WHERE dns != ''

GROUP BY dns
ORDER BY multiply(cnt, {sort_order:Int8})

LIMIT {n:UInt64}
